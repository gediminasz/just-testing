{
    "name": "just-testing",
    "displayName": "just-testing",
    "description": "Simple tests runner",
    "version": "0.0.1",
    "publisher": "gediminasz",
    "repository": {
        "type": "git",
        "url": "https://github.com/gediminasz/just-testing"
    },
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.runAll",
        "onCommand:extension.runOnCursor",
        "onCommand:workbench.action.tasks.runTask"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Just Testing",
            "properties": {
                "justTesting.regex": {
                    "type": "string",
                    "default": "def (test_.+)\\(",
                    "description": "Regular expression for matching closest test name"
                },
                "justTesting.runOnCursorCommand": {
                    "type": "string",
                    "default": "python -m pytest {fileName}::{testName}",
                    "description": "Terminal command for \"Run test on cursor\""
                },
                "justTesting.runAllCommand": {
                    "type": "string",
                    "default": "python -m pytest -v",
                    "description": "Terminal command for \"Run all tests\""
                }
            }
        },
        "commands": [
            {
                "command": "extension.runAll",
                "title": "Run all tests"
            },
            {
                "command": "extension.runOnCursor",
                "title": "Run test on cursor"
            }
        ],
        "taskDefinitions": [
            {
                "type": "testFile"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "eslint": "^5.13.0",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
